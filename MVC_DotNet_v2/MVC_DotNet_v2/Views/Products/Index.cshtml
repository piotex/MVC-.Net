@model List<MVC_DotNet_v2.Models.DbModels.DbModel_Products>

<h1>Products</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Quantity</th>
            <th scope="col">Type</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @using (Html.BeginForm("Index", "Products", FormMethod.Post))
        {
            for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    @Html.HiddenFor(m => m[i].id)
                    <td>@Html.TextBoxFor(m => m[i]._quantity_)</td>
                    <td>@Html.TextBoxFor(m => m[i]._type_)</td>
                    <td>@Html.TextBoxFor(m => m[i]._name_)</td>
                    <td>@Html.TextBoxFor(m => m[i]._price_)</td>
                </tr>
            }
            <tr><button type="submit">Save</button></tr>
        }
        </tbody>
    </table>
    






