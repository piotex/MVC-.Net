@model MVC_DotNet_v2.Models.DbModels.DbModel_Categories

<tr>
    @using (Html.BeginForm("ChangeCategory", "ProductCategory", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.id)
        <td>@Html.TextBoxFor(m => m.categorie_id)</td>
        <td>@Html.TextBoxFor(m => m.categorie_name)</td>
        <td><button type="submit">Save</button></td>
    }
</tr>
